<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Sciifii.Downloader.Controls">


    <Style TargetType="{x:Type local:Marquee}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Marquee}">
                    <Canvas ClipToBounds="True" Name="PART_Container">
                            <ContentPresenter Name="PART_Presenter" />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
